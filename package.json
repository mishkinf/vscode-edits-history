{
    "name": "vscode-edits-history",
    "displayName": "vscode-edits-history",
    "description": "A Visual Studio Extension that Provides the ability to quickly navigate back and forth between recently made edits",
    "version": "0.0.2",
    "publisher": "mishkinf",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "bugs": {
        "url": "https://github.com/mishkinf/vscode-edits-history/issues"
    },
    "homepage": "https://github.com/mishkinf/vscode-edits-history",
    "repository": {
        "type": "git",
        "url": "https://github.com/mishkinf/vscode-edits-history.git"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Edits History Configuration",
            "properties": {
                "editsHistory.maxHistory": {
                    "type": "number",
                    "default": 10,
                    "description": "Maximum number of entries for the edits history."
                },
                "editsHistory.showInformationMessages": {
                    "type": "boolean",
                    "default": false,
                    "description": "Display an informational message when key commands to navigate to the next or previous key command is triggered."
                }
            }
        },
        "commands": [
            {
                "command": "editsHistory.moveCursorToPreviousEdit",
                "title": "Move cursor to previous edit location"
            },
            {
                "command": "editsHistory.moveCursorToNextEdit",
                "title": "Move cursor to next edit location"
            },
            {
                "command": "editsHistory.moveCursorToPreviouslyEditedFile",
                "title": "Moves the cursor to the last edit made in the last file edited"
            },
            {
                "command": "editsHistory.moveCursorToNextEditedFile",
                "title": "Moves the cursor to the next edit made in the last file edited"
            },
            {
                "command": "editsHistory.moveCursorToPreviousEditInSameFile",
                "title": "Moves the cursor to the last edit made in the current file"
            },
            {
                "command": "editsHistory.moveCursorToNextEditInSameFile",
                "title": "Moves the cursor to the next edit made in the current file"
            }
        ],
        "keybindings": [
            {
                "command": "editsHistory.moveCursorToPreviousEdit",
                "key": "ctrl+j",
                "mac": "cmd+j"
            },
            {
                "command": "editsHistory.moveCursorToNextEdit",
                "key": "ctrl+k",
                "mac": "cmd+k"
            },
            {
                "command": "editsHistory.moveCursorToPreviouslyEditedFile",
                "key": "ctrl+shift+j",
                "mac": "cmd+shift+j"
            },
            {
                "command": "editsHistory.moveCursorToNextEditedFile",
                "key": "ctrl+shift+k",
                "mac": "cmd+shift+k"
            },
            {
                "command": "editsHistory.moveCursorToPreviousEditInSameFile",
                "key": "ctrl+shift+u",
                "mac": "cmd+shift+u"
            },
            {
                "command": "editsHistory.moveCursorToNextEditInSameFile",
                "key": "ctrl+shift+i",
                "mac": "cmd+shift+i"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/deep-equal": "^1.0.1",
        "deep-equal": "^1.0.1"
    }
}
